<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:jee="http://www.springframework.org/schema/jee" xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="
           http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd
           http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee-2.5.xsd
           http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd">


	<bean id="gformContext"
		class="org.atemsource.atem.service.gform.GformContext">
		<property name="typeCreators">
			<list>
				<bean class="org.atemsource.atem.service.gform.TypeCreator">
					<property name="typeMapping">
						<map>
							<entry key="text" value="string"/>
							<entry key="boolean" value="boolean"/>
						</map>
					</property>
					<property name="mixins">
						<list>
							<bean class="org.atemsource.atem.service.gform.creator.DateFormatMixin"/>
							<bean class="org.atemsource.atem.service.gform.creator.MaxMixin"/>
							<bean class="org.atemsource.atem.service.gform.creator.MinMixin"/>
							<bean class="org.atemsource.atem.service.gform.creator.PatternMixin"/>
							<bean class="org.atemsource.atem.service.gform.creator.PossibleValuesMixin"/>
						</list>
					</property>
				</bean>
			</list>
		</property>
		<property name="attributeCreators">
			<list>
				<bean class="org.atemsource.atem.service.gform.creator.PrimitiveAttributeCreator"/>
				<bean class="org.atemsource.atem.service.gform.creator.PrimitiveListAttributeCreator"/>
				<bean class="org.atemsource.atem.service.gform.creator.EmbeddedAttributeCreator"/>
				<bean class="org.atemsource.atem.service.gform.creator.MultiEmbeddedAttributeCreator"/>
				<bean class="org.atemsource.atem.service.gform.creator.MultiEmbeddedArrayAttributeCreator"/>
				<bean class="org.atemsource.atem.service.gform.creator.EmbeddedArrayAttributeCreator"/>
			</list>
		</property>
		<property name="groupCreator">
			<bean class="org.atemsource.atem.service.gform.GroupCreator"/>
		</property>
		<property name="typeCodeResolver">
			<bean class="org.atemsource.atem.service.gform.creator.TypeCodeResolver"></bean>
		</property>
		<property name="objectMapper">
			<bean class="org.codehaus.jackson.map.ObjectMapper"/>
		</property>
	</bean>


</beans>